<% action = (cat.persisted? ? cat_url(cat) : cats_url) %>
<% method = (cat.persisted? ? :patch : :post) %>


<div class="form_area">
<form action="<%= action %>" method="post">
  <input type="hidden" name="_method" value="<%= method %>">
  <div class="form">
  <div class="space">
  <label for="cat_name" class = cat_name>Name</label>
  <input
    type="text"
    name="cat[name]"
    id="cat_name"
    value="<%= cat.name %>">
    </div>

  <div class="space">
  <label for="cat_birth_date">Birth Date</label>
  <input
    type="date"
    name="cat[birth_date]"
    id="cat_birth_date"
    value="<%= cat.birth_date %>">
    </div>



  <div class="space">
  <label for="cat_color">Color</label>
  <select name="cat[color]" id="cat_color">
  <option disabled selected>-- select a color --</option>
    <% Cat::CAT_COLORS.each do |color| %>
      <option
        <%= cat.color == color ? "selected" : "" %>
        value="<%= color %>">
        <%= color.upcase %>
      </option>
    <% end %>
  </select>
  </div>


  <div class="space">
  <div class = gender>
      <label for="cat_sex_male">Male</label>
  <input
    type="radio"
    name="cat[sex]"
    value="M"
    id="cat_sex_male"
    <%= cat.sex == "M" ? "checked" : "" %>>
  
     <label for="cat_sex_female">Female</label>
  <input
    type="radio"
    name="cat[sex]"
    value="F"
    id="cat_sex_female"
    <%= cat.sex == "F" ? "checked" : "" %>>
    </div>
    </div>

  
  

  <div class="space">
  <label class = crimes_label>
    Crimes
  </label>
  <div class = crimes_box>
    <textarea name="cat[description]"><%= cat.description %></textarea>
  </div>
  </div>
  </div>



  <% submit_text = (cat.persisted? ? 'Update' : 'Create') + ' cat!' %>
  <input type="submit" value="<%= submit_text %>">
  </div>
</form>

